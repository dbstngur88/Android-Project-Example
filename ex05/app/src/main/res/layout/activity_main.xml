<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E69D9D"
    android:layout_margin="10sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBE885"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1페이지"
            />
        <Button
            android:id="@+id/btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2페이지"
            />
        <Button
            android:id="@+id/btn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3페이지"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/page01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EAAFF4"
            android:padding="10sp"
            android:layout_margin="10sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1페이지 입니다."
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/page02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6A39D"
            android:padding="10sp"
            android:layout_margin="10sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2페이지 입니다."
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/page03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFECB2"
            android:padding="10sp"
            android:layout_margin="10sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3페이지 입니다."
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>